<h1>Editing Book</h1>

<div>
  <h2>2 errors prohibited this book from being saved:</h2>
  <% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    
    <h4>Body</h4>
      <%= f.text_area :body %>
      
    <div>
      <%= f.submit 'Update Book' %>
    </div>
  

  <div>
    <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
  </div>

<% end %>

